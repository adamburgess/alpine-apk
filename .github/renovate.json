{
    "extends": [
        "config:base",
        ":disableDependencyDashboard",
        "schedule:monthly"
    ],
    "rangeStrategy": "replace",
    "packageRules": [
        {
          "packageNames": ["node"],
          "enabled": false
        },
        {
            "matchDepTypes": ["devDependencies"],
            "groupName": "dev dependencies",
            "separateMajorMinor": false,
            "rangeStrategy": "bump"
        }
    ],
    "prHourlyLimit": 999
}
